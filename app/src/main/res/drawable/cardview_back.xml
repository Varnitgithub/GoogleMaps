<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom part of the card -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color of the card -->
            <corners android:topLeftRadius="60dp" android:topRightRadius="60dp"
                android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
        </shape>
    </item>

    <!-- Top part of the card with curved radius -->
    <item android:top="8dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color of the card -->
            <corners android:topLeftRadius="60dp" android:topRightRadius="60dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>